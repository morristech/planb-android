<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="PlanBCrashDetailTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#333333</item>
        <item name="colorPrimaryDark">@color/crash_bg_blue_dark</item>
        <item name="colorAccent">@color/crash_bg_blue_accent</item>
        <item name="android:windowBackground">@drawable/planblib_crashbg_blue</item>
        <item name="android:textColor">@color/crash_bg_blue_text</item>
    </style>

    <style name="PlanBCrashDetailBaseText">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PlanBCrashDetailSubHeader" parent="PlanBCrashDetailBaseText">
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="PlanBCrashDetailMonospace" parent="PlanBCrashDetailBaseText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">monospace</item>
    </style>

    <style name="PlanBDefaultTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#f57c00</item>
        <item name="colorPrimaryDark">#c46300</item>
        <item name="colorAccent">#4a13c2</item>
    </style>
</resources>